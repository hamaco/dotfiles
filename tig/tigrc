set diff-context   = 5
set show-id        = yes
set vertical-split = yes
set wrap-lines     = no


bind diff ; view-next
bind diff l scroll-right
bind diff h scroll-left

# copy commit_id (Mac)
bind main C !@git pbcopy %(commit)

# open commit at github
bind generic o !@hub browse -- commit/%(commit)

bind generic L !git reflog
