snippet     if
abbr        if {}
prev_word   '^'
    if (${1:condition}) {
        ${2}
    }

snippet     ife
abbr        if {} else {}
prev_word   '^'
    if (${1:condition}) {
        ${2:// code...}
    } else {
    }

snippet     switch
abbr        switch () {}
prev_word   '^'
    switch (${1:variable}) {
        case "${2:value}":
            ${3:// code...}
            break;
    }

