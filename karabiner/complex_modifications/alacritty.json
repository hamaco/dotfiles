{
    "title": "Alacritty window toggler",
    "rules": [
        {
            "description": "cmd + esc to toggle alacritty window",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "escape",
                        "modifiers": {
                            "mandatory": [
                                "right_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "3",
                            "modifiers": [
                                "left_control",
                                "left_shift",
                                "left_option",
                                "right_command"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
