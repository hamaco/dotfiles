display:none !important;
}

/* フォルダを開いたときにスクロールバーでずれない */
#subs_container{
overflow-y:scroll !important;
}

/* フラットのツリーを１行*/
.treeitem{
white-space: nowrap !important;
height:auto !important;
}

/* footerの削除 */
#footer{
display:none !important;
}

/* メニュー */
#menu{
height:0px !important;
z-index:100 !important;
margin-right:250px !important;
}

#menu:hover #my_menu{
top:0px !important;
}

#my_menu{
position:absolute;
top:-100px;
right:280px !important;
height:25px;
background-color:#efefef !important;
z-index:200;
border:#a5c5ff solid 3px;
padding-left:5px !important;
padding-right:5px !important;
}

/* 未読数｜エントリー数 */
#total_unread_count{
position:absolute !important;
right:280px !important;
z-index:180;
}

/* 棒人間 */ 
#message_box{
position:fixed !important;
top:-5px !important;
left:20px !important;
}

/* コントロールエリア */
#left_container{
left:auto !important;
right:0 !important;
z-index:110 !important;
}

#subs_container {
background-color:#f5f5f5 !important;
}

#right_container {
left:0 !important;
right:auto !important;
}

/* フォントサイズ調整 */
.fontpad{
display:none;
}

/* コントロールパネル */
#control_buttons,
#myfeed{
right:0 !important;
z-index:150 !important;
}

#control_buttons{
right:0px !important;
}

#myfeed_tab .bottom {
display:none !important;
}

#control_buttons{
