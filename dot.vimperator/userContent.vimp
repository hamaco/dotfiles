/* zakzak芸能を読みやすくする */
/* http://pipes.yahoo.com/momizine/zakzak */
.item_body img[src^="http://www.zakzak.co.jp/"]{
float:left;
margin-right:0.5em;
margin-bottom:0.5em;
}
.item_body img[src^="http://www.zakzak.co.jp/"] + br,
.item_body img[src^="http://www.zakzak.co.jp/"] + br + br{
display:none;
}

.item_body a img{
border:none;
}
.item_body img + br{
display:none;
}
.item_body ol,
.item_body 
.item_body hr,
.item_body pre,
.item_body blockquote,
.item_body table,
.item_body ul,
.item_footer{
clear:left !important;
}

/* 大きすぎる画像 */
div.body img {
max-width: 100%;
}

/* スポンサーフィード */
.adfeeds_body{
display:none;
}
