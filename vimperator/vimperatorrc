" Key mappings {{{1

" 邪魔なキーを無効化
noremap <F1> <Nop>
noremap! <C-j> <Nop> " これ動かない?
inoremap <C-j> <Nop>
cnoremap <C-j> <Nop>
nnoremap <C-k> <Nop>

nnoremap <C-l> :<C-u>source ~/.vimperatorrc<CR>
nnoremap <C-,> :preferences<CR>

noremap ; :
noremap : ;

" j/k でのスクロールを3行にした
nnoremap j 3<C-e>
nnoremap k 3<C-y>
nnoremap h 3h
nnoremap l 3l

" インサートモードでの色々
inoremap <C-b> <Left>
inoremap <C-f> <Right>
inoremap <C-h> <BS>
cnoremap <C-h> <BS>

" コマンドモードでの色々
cnoremap <C-b> <Left>
cnoremap <C-f> <Right>
cnoremap <C-p> <S-Tab>
cnoremap <C-n> <Tab>
cnoremap <C-v> <S-Insert>

" タブ関係
nnoremap z <A-Left>
nnoremap x <A-Right>

nnoremap H <C-p>
nnoremap L <C-n>
nnoremap <Left> :tabmove! -1<CR>
nnoremap <Right> :tabmove! +1<CR>

" }}}
